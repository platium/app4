{
  "name": "${envName}",
  "description": "no need for desc",
  "containers": [
    {
      "hostname": "web-apache",
      "template": "abdysamat-apache@b986652a73f7446b7ea9a9ed4c8100e8ef3079f0",
      "peer-criteria": "free peers",
      "size": "TINY",
      "port-mapping": [
        {
          "protocol": "http",
          "domain": "cloud.stage-hub.net",
          "external-port": "80",
          "internal-port": "80"
        }
      ]
    }
  ],
  "peer-criteria": [
     {
      "name": "HTTP-GROUP",
      "max-price": "50",
      "resource-availability": {
	    "avg-cpu-load": "50",
	    "min-free-ram": "64000",
	    "min-free-disk-space": "64000000"
	    }
    }
  ],
  "configuration": {
    "arguments": [
      {
        "key": "htmlFileName",
        "value": "${filename}"
      },
      {
        "key": "htmlContent",
        "value": "Hello world! This page was craeted with Subutai blueprint: https://github.com/samsonbek/helloworld-bp/"
      }
    ],
    "source-url": "https://github.com/samsonbek/helloworld-bp/archive/master.zip",
    "ansible-playbook": "main.yml",
    "groups": [
      {
        "name": "web-group",
        "hostnames": [
          "web-apache"
        ]
      }
    ]
  },
  "user-variables": {
    "envName": {
      "description": "Enter environment name, must container only letters",
      "type": "string",
      "default": "HelloWWWorld",
      "validation": "[a-zA-Z]+"
    }
  }
}
